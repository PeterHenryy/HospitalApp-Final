@model CreateAppointmentViewModel  

@using HospitalApp.Models.Patients

<table class="table table-striped table-dark">
    <tr>
        <th>ID</th>
        <th>AppointmentStartTime</th>
        <th>AppointmentEndTime</th>
        <th>AppointmentDate</th>
        <th>InitialTotal</th>
        <th>IsBooked</th>
        <th>Notes</th>

    </tr>

    <tr>
        <td>@Model.Appointment.ID</td>
        <td>@Model.Appointment.AppointmentStartTime</td>
        <td>@Model.Appointment.AppointmentEndTime</td>
        <td>@Model.Appointment.AppointmentDate</td>
        <td>@Model.Appointment.InitialTotal</td>
        <td>@Model.Appointment.IsBooked</td>
        <td>@Model.Appointment.Notes</td>
    </tr>
</table>

<form asp-controller="Patient" asp-action="BookAppointment">
    <input type="text" class="form-control" hidden asp-for="@Model.Appointment.ID" value="@Model.Appointment.ID">
    <input type="text" class="form-control" hidden asp-for="@Model.Appointment.AppointmentStartTime" value="@Model.Appointment.AppointmentStartTime">
    <input type="text" class="form-control" hidden asp-for="@Model.Appointment.AppointmentEndTime" value="@Model.Appointment.AppointmentEndTime">
    <input type="text" class="form-control" hidden asp-for="@Model.Appointment.AppointmentDate" value="@Model.Appointment.AppointmentDate">
    <input type="text" class="form-control" hidden asp-for="@Model.Appointment.InitialTotal" value="@Model.Appointment.InitialTotal">
    <input type="text" class="form-control" hidden asp-for="@Model.Appointment.IsBooked" value="True">
    <input type="text" class="form-control" hidden asp-for="@Model.Appointment.DoctorID" value="@Model.Appointment.DoctorID">
    <input type="text" class="form-control" hidden asp-for="@Model.Appointment.UserID" value="@Model.Appointment.UserID">

     <div class="form-group">
        <label>Notes</label>
        <input type="text" class="form-control" asp-for="@Model.Appointment.Notes">
    </div>

    @*<button type="submit" class="btn btn-primary">Create Appointment</button>*@
@*</form>*@

<table class="table table-striped table-primary">
   
    <tr>
        <th>
            Question1
        </th>
    </tr>
        
    @*<form method="post" action="@Url.Action("AddPROMIS10", "Patient")">*@
        @for (var i = 0; i < PROMIS10_Questions.QuestionsList.Count; i++)
        {
                <tr> 
                    <td> 
                        <div>
                            <label>@PROMIS10_Questions.QuestionsList[i]</label>
                            @for (var j = 1; j <= 5; j++)
                            {
                                <label>
                                    <input type="radio" name="Answers[@i]" value="@j" required /> @j
                                </label>
                            }
                            <input type="hidden" name="QuestionIds[@i]" value="@i" style="float:right"/>
                        </div>
                    </td>   
                </tr>
        }

        <button type="submit">Submit</button>
</table>
</form>

