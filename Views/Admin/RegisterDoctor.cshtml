@model RegisterDoctorAndUserViewModelForm
@using HospitalApp.Helpers.Enums
@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/loginForm.css" />
<link rel="stylesheet" href="~/css/general.css" />

<div class="login-form-container">
    <h1>Welcome!</h1>
    <form asp-controller="Admin" asp-action="RegisterDoctor" class="authentication-form">

        <input type="text" placeholder="Username" asp-for="UserDataForm.UserName">
        <input type="email" placeholder="Email" asp-for="UserDataForm.Email" />
        <input type="password" placeholder="Password" asp-for="UserDataForm.Password">

        <select asp-for="DoctorDataForm.DoctorRole" asp-items="new SelectList(Model.DoctorRoles)">
            <option>Select a Role</option>
        </select>

        <select asp-for="DoctorDataForm.HierarchyStatus">
            <option disabled> Select Hierarchy Status </option>
            @for (var i = 0; i < DoctorHierarchy.DoctorsHierarchy.Count(); i++)
            {
                <option value="@(i+1)">@DoctorHierarchy.DoctorsHierarchy.ElementAt(i).Key</option>
            }
        </select>

        <button type="submit">Add Doctor</button>

        
    </form>
</div>


