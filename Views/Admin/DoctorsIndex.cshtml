@model List<Doctor>
<h1>Hospital Revenue @ViewBag.Revenue</h1>
<a class="btn btn-success" href="@Url.Action("RegisterDoctor", "Admin")">Add Doctor</a>
<table class="table table-striped table-dark">
    <tr>
        <th>ID</th>
        <th>Doctor Role</th>
        <th>Doctor Email</th>
        <th>Doctor Name</th>
        <th>Revenue</th>
         <th>Action</th>
        <th>Action</th>
        <th>Action</th>

    </tr>
    @for (int i = 0; i < Model.Count(); i++)
    {
        Doctor doctor = Model[i];
        <tr>
            <td>@doctor.ID</td>
            <td>@doctor.DoctorRole</td>
            <td>@doctor.User.Email</td>
            <td>@doctor.User.UserName</td>
            <td>@ViewBag.DoctorRevenues[i]</td>
            <td> <a class="btn btn-danger" href="@Url.Action("Delete", "Admin", new {doctorID = doctor.ID, userID = doctor.UserID})">Delete</a></td>
            <td> <a class="btn btn-primary" href="@Url.Action("DoctorAppointments", "Admin", new {doctorID = doctor.ID})">Details</a></td>
            <td> <a class="btn btn-primary" href="@Url.Action("CreateAppointment", "Admin", new {doctorID = doctor.ID})">Create Appointment</a></td>

        </tr>
    }
</table>